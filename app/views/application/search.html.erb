<% if !@searchedEvents.nil? || !@searchedTags.nil? %>

    <% if !@searchedEvents.empty? || !@searchedTags.nil? %>
        <h3>Events(s) found:</h3>
        <br>
        <div id="lightbox" class="row">
            <% @storage.each do |event| %>
              <div class="col-sm-6 col-md-3 col-lg-2 well event-search">
                <div class="portfolio-item">
                  <a href="events/<%= event.id %>" >
                    <div class="hover-bg">
                        <div class="hover-text">
                            <h4><%= event.title %></h4>
                            <div class="clearfix"></div>
                        </div>
                  </a>
                    <%= link_to image_tag(event.image.url(:large), :class => "img-responsive"), event %>
                    </div>
                    <h4 class="text-center event-search-text">Starts: <%= event.start_date %></h4>
                </div>
              </div>
            <% end %>
        </div>

    <% else %>
        <h3>No Events Found</h3>
    <% end %>
<% end %>